{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "CI=false npm run build",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- ./src ./api ./public ./package.json ./vercel.json",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-temp-files",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "api/remove-background.js": {
      "maxDuration": 60
    },
    "api/generate-image.js": {
      "maxDuration": 60
    },
    "api/edit-image.js": {
      "maxDuration": 60
    },
    "api/generate-mockup.js": {
      "maxDuration": 60
    },
    "api/generate-inpainting.js": {
      "maxDuration": 60
    },
    "api/generate-idphoto.js": {
      "maxDuration": 60
    },
    "api/character-gen.js": {
      "maxDuration": 60
    },
    "api/character-pose.js": {
      "maxDuration": 60
    },
    "api/cleanup-temp-files.js": {
      "maxDuration": 60
    },
    "api/character-animation.js": {
      "maxDuration": 300
    },
    "api/scene-continuation.js": {
      "maxDuration": 60
    },
    "api/character-expression-sheet.js": {
      "maxDuration": 60
    },
    "api/character-turnaround.js": {
      "maxDuration": 60
    },
    "api/character-scene.js": {
      "maxDuration": 60
    }
  }
}
